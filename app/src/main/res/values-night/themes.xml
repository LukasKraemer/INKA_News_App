<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.INKADIGIMAN" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mygreen_lighter</item>
        <item name="colorPrimaryVariant">@color/mygreen</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="pagesColor">#4E4E4E</item>
        <item name="abbreviationsBarColor">@color/mygreen_darker</item>
        <item name="anotherMonthsDaysLabelsColor">#8B0000</item>
        <item name="headerColor">@color/mygreen_lighter</item>
        <item name="headerLabelColor">@color/mygreen_darker</item>

    </style>
    <style name="Theme.INKADIGIMAN.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.INKADIGIMAN.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.INKADIGIMAN.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>